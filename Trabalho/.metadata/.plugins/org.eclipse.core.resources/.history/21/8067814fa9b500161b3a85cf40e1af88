package Model;

import java.awt.*;

public enum CoresArmas
{
	Vazio,
	VazioAtingido,
	Couracado,
	CouracadoSelecionado,
	Submarino,
	SubmarinoSelecionado,
	Cruzador,
	CruzadorSelecionado,
	Hidroaviao,
	HidroaviaoSelecionado,
	Destroyer,
	DestroyerSelecionado,
	Destruida;
	
	private final int r;
    private final int g;
    private final int b;
    private final String rgb;

    private Colors(final int r,final int g,final int b) {
        this.r = r;
        this.g = g;
        this.b = b;
        this.rgb = r + ", " + g + ", " + b;
    }
}